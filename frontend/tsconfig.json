{
  "compilerOptions": {
    "target": "ES2017",
    "baseUrl": ".",  // Set the base URL to the project root
    "paths": {
      "@/*": ["./*"]  // Alias '@/' to the project root
    },


    
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
, "components/auth/LoginForm.tsx", "components/auth/RegisterForm.tsx"  ],
  "exclude": [
    "node_modules"
  ]
}
